<div class="wrap container-fluid" style="margin-top: 3em;">
    <section>
        <div class="row">
            <div class="col-xs-7 signup-text-box">
                <p class="signup-heading">Signup
                </p>
                <p class="signup-text">We do not share your personal details with anyone.
                </p>
            </div>
            <div class="col-xs-5">
                <form class="signup-form">

                    {{#each registerData}}
                    <div class="form-group">
                        <input type="{{type}}" name="{{label}}" class="form-control" required />
                        <label class="form-label">{{label}}
                        </label>
                    </div>
                    {{/each}}
                    <div class="form-group">
                        <button class="signup-btn">Signup
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>